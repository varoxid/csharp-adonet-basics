<UserControl x:Class="PGViewer.View.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PGViewer.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
        VerticalAlignment="Top"
        Grid.Column="0">
            </StackPanel>
        </Grid>
        <Border Grid.Row="1"
        Background="#200F53"
        CornerRadius="10" 
        Padding="10">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
                <DataGrid 
            Grid.Row="1" 
            ItemsSource="{Binding Customers}"
            SelectedItem="{Binding SelectedCustomer}"
            AutoGenerateColumns="False" 
            CanUserAddRows="False"
            IsReadOnly="False" 
            Style="{StaticResource CustomDataGridStyle}"
            SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Customer" 
                            Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            CellStyle="{StaticResource EditableDataGridCellStyle}"
                            Width="150"/>
                        <DataGridTextColumn 
                            Header="Comment" 
                            Binding="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                            CellStyle="{StaticResource EditableDataGridCellStyle}"
                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                    <Button 
                        Content="Add New" 
                        Command="{Binding AddNewCommand}" 
                        Width="80" 
                        Margin="5 0" 
                        Style="{StaticResource PaginationButtonStyle}"/>
                    <Button 
                        Content="Save Changes" 
                        Command="{Binding SaveCommand}" 
                        Width="120" 
                        Margin="5 0" 
                        Style="{StaticResource PaginationButtonStyle}"/>
                    <Button 
                        Content="Delete" 
                        Command="{Binding DeleteCommand}" 
                        Width="80" 
                        Margin="5 0" 
                        Style="{StaticResource PaginationButtonStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0 10 0 0">
                    <Button Content="First" 
                    Command="{Binding FirstPageCommand}" 
                    Width="60"
                    Style="{StaticResource PaginationButtonStyle}"
                    Margin="0 0 5 0"/>
                    <Button Content="Previous" 
                    Command="{Binding PreviousPageCommand}" 
                    Width="80"
                    Style="{StaticResource PaginationButtonStyle}"
                    Margin="0 0 5 0"/>

                    <TextBlock Text="{Binding CurrentPage}"
                       Style="{StaticResource menuButtonText}"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource TextBrush}"
                       Margin="5 0 5 0"/>
                    <TextBlock Text="/"
                       Style="{StaticResource menuButtonText}"
                       Foreground="{StaticResource TextBrush}"
                       VerticalAlignment="Center" 
                       Margin="0"/>
                    <TextBlock Text="{Binding TotalPages}"
                       Style="{StaticResource menuButtonText}"
                       Foreground="{StaticResource TextBrush}"
                       VerticalAlignment="Center" 
                       Margin="5 0 5 0"/>

                    <ComboBox SelectedItem="{Binding PageSize, Mode=TwoWay}"
                      Width="60"
                      Style="{StaticResource PaginationComboBoxStyle}"
                      Margin="5 0 5 0">
                        <system:Int32 xmlns:system="clr-namespace:System;assembly=mscorlib">5</system:Int32>
                        <system:Int32 xmlns:system="clr-namespace:System;assembly=mscorlib">10</system:Int32>
                        <system:Int32 xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Int32>
                        <system:Int32 xmlns:system="clr-namespace:System;assembly=mscorlib">50</system:Int32>
                    </ComboBox>

                    <Button 
                Content="Next" 
                Command="{Binding NextPageCommand}" 
                Width="80" 
                Style="{StaticResource PaginationButtonStyle}"
                Margin="5 0 5 0"/>
                    <Button 
                Content="Last" 
                Command="{Binding LastPageCommand}" 
                Width="60" 
                Style="{StaticResource PaginationButtonStyle}"
                Margin="5 0 0 0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
